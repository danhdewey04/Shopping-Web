<%- include("../layout/head")%>
    <%- include("../layout/header")%>
        <%- include("../layout/sidebar")%>
            <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                <div class="row">
                    <ol class="breadcrumb">
                        <li><a href="#"><svg class="glyph stroked home">
                                    <use xlink:href="#stroked-home"></use>
                                </svg></a></li>
                        <li class="active">Danh sách quảng cáo</li>
                    </ol>
                </div><!--/.row-->

                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Danh sách quảng cáo</h1>
                    </div>
                </div><!--/.row-->
                <div id="toolbar" class="btn-group">
                    <a href="/admin/ads/create" class="btn btn-success">
                        <i class="glyphicon glyphicon-plus"></i> Thêm quảng cáo
                    </a>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <table data-toolbar="#toolbar" data-toggle="table">

                                    <thead>
                                        <tr>
                                            <th data-field="id" data-sortable="true">ID</th>
                                            <th data-field="name" data-sortable="true">Tên quảng cáo</th>
                                            <th>Mô tả</th>
                                            <th data-field="link" data-sortable="true">Link</th>
                                            <th>Trạng thái</th> 
                                            <th>Kiểu</th>
                                            <th>Thứ tự</th>
                                            <!--<th>Ảnh</th>-->
                                            <th>Lượt truy cập</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let ad of ads){%>
                                            <tr>
                                                <td>1</td>
                                                <td><%=ad.name%></td>
                                                <td><%=ad.description%></td>
                                                <td><a href="<%=ad.link%>" target="_blank"><%=ad.link%></a></td>
                                                <td><input type="checkbox" class="ad-status-switch" data-id="<%=ad._id%>" <%= ad.status === true ? "checked" : "" %> /></td>
                                                <td><%=ad.type%></td>
                                                <td><%=ad.position%></td>
                                                <!--<td style="text-align: center"><img width="130" height="80"
                                                        src="/static/images/<%=ad.thumbnail%>" />
                                                </td>-->
                                                <td><%=ad.views%></td>
                                                <td class="form-group">
                                                    <a href="/admin/ads/edit/<%=ad._id%>" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                                                    <a href="/admin/ads/delete/<%=ad._id%>" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                                                </td>
                                            </tr>
                                        <% }%>
                                    </tbody>
                                </table>
                            </div>
                            <div class="panel-footer">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <% if(page> 1){%>
                                            <li class="page-item"><a class="page-link"
                                                    href="/admin/ads?page=<%=prev%>">&laquo;</a></li>
                                            <% }%>
                                                <% for(let pageNumber of paginate){%>
                                                    <li class="page-item <%= pageNumber===page? 'active': ''%>"><a
                                                            class="page-link"
                                                            href="/admin/ads?page=<%=pageNumber%>">
                                                            <%=pageNumber%>
                                                        </a></li>
                                                    <% }%>
                                                        <% if(page < totalPages){%>
                                                            <li class="page-item"><a class="page-link"
                                                                    href="/admin/ads?page=<%=next%>">&raquo;</a>
                                                            </li>
                                                    <% }%>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div><!--/.row-->
            </div> <!--/.main-->

            <script src="js/jquery-1.11.1.min.js"></script>
            <script src="js/bootstrap.min.js"></script>
            <script src="js/bootstrap-table.js"></script>
            <%- include("../layout/footer")%>