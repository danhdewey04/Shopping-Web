<%- include("../layout/head")%>
    <%- include("../layout/header")%>
        <%- include("../layout/sidebar")%>
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li><a href="">Quản lý quảng cáo</a></li>
				<li class="active"><%=ad.name%></li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Danh mục:<%=ad.name%></h1>
			</div>
		</div><!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <% if (typeof error !== "undefined" && error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                            <form action="/admin/ads/update/<%=ad._id%>" role="form" method="post">
                            <div class="form-group">
                                <label>Tên quảng cáo:</label>
                                <input type="text" name="name" required 
                                value="<%=ad.name%>" class="form-control" placeholder="Tên danh mục...">
                            </div>
                            <div class="form-group">
                                <label>Mô tả:</label>
                                <input type="text" name="description" required 
                                value="<%=ad.description%>" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Link:</label>
                                <input type="text" name="link" required 
                                value="<%=ad.link%>" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Loại:</label>
                                <select name="type" class="form-control">
                                    <option value="slider" <%=ad.type==="slider"? "selected" : ""%>>Slider</option>
                                    <option value="banner" <%=ad.type==="banner"? "selected" : ""%>>Banner</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label><br>
                                <input type="checkbox" name="status" value="true" <%=ad.status ? "checked" : ""%>> Hiện
                            </div>
                            
                            <div class="form-group">
                                <label>Thứ tự hiển thị (position):</label>
                                <input type="number" name="position" class="form-control" value="<%=ad.position%>" min="0">
                            </div>
                            <!--
                            <div class="form-group">
                                <label>Ảnh quảng cáo (thumbnail):</label>
                                <input type="file" name="thumbnail">
                                    <br>
                                    <div>
                                        <img src="../images/<%=ad.thumbnail%>">
                                    </div>
                                </div>
                            -->
                            <div class="form-group">
                                <label>Lượt truy cập (views):</label>
                                <input type="number" name="views" class="form-control" value="<%=ad.views%>" min="0" readonly>
                            </div>
                            <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div><!-- /.col-->
	</div>	<!--/.main-->	
<%- include("../layout/footer")%>
